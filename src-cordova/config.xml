<?xml version='1.0' encoding='utf-8'?>
<widget id="io.decodezero.intervals.app" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>E-Conta</name>
    <description>Administrador de despesas pessoais</description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="APP_SECRET" value="e794a963-7f8d-44bb-8b30-a709cd553ec6" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-statusbar" spec="^2.4.3" />
    <allow-navigation href="about:*" />
    <plugin name="cordova-plugin-appcenter-analytics" spec="^0.5.1" />
    <plugin name="cordova-plugin-appcenter-crashes" spec="^0.5.1" />
    <engine name="android" spec="^7.0.0" />
</widget>
